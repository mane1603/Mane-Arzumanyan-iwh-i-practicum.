doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Travel Destinations
        a(href="/") Return to the homepage
        .cards 
            each destination in data
                .card 
                    h2.card__name #{destination.properties.name}  #{destination.properties.lastname}
                    p.card__email #{destination.properties.email}